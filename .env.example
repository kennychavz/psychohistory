# OpenRouter API Key (required for LLM)
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Site URL (optional, for OpenRouter attribution)
SITE_URL=http://localhost:3000

# Search Provider (optional, defaults to mock)
# Options: 'exa', 'tavily', 'mock'
SEARCH_PROVIDER=mock

# Exa AI API Key (if using Exa)
EXA_API_KEY=your-exa-key-here

# Tavily API Key (if using Tavily)
TAVILY_API_KEY=your-tavily-key-here

# Manifold Markets API (for play-money prediction market trading)
# Generate from: https://manifold.markets/profile -> Edit -> API Key
# Note: Manifold uses play money (Mana) - no real money involved
MANIFOLD_API_KEY=your_manifold_api_key_here
